{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "NestJS: Development (Debug + Hot Reload)",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "start:debug"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "restart": true,
            "sourceMaps": true,
            "stopOnEntry": false,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "outputCapture": "std"
        },
